@model ProyectoFinalPAII.Models.Libros

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Libros</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de Libro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LibrosName)
        </dd>
        <dt class = "col-sm-2">
            Fecha de lanzamiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaLanzamiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Editorial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Editorial.EditorialName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-light" asp-action="Edit" asp-route-id="@Model?.LibrosId">Editar</a> |
    <a class="btn btn-success" asp-action="Index">Volver</a>
</div>
