@model ProyectoFinalPAII.Models.Devoluciones

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Devoluciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DevolucionesId" />
            <div class="form-group">
                <label asp-for="PrestamoId" class="control-label"></label>
                <select asp-for="PrestamoId" class="form-control" asp-items="ViewBag.PrestamoId"></select>
                <span asp-validation-for="PrestamoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDevolucion" class="control-label"></label>
                <input asp-for="FechaDevolucion" class="form-control" />
                <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
